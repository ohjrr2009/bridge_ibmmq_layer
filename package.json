{
  "name": "bridge-ibmmq-layer",
  "description": "",
  "version": "0.1.0",
  "dependencies": {
    "aws-cli": "0.0.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.77",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^7.0.0",
    "serverless-plugin-resource-tagging": "^1.1.0",
    "serverless-plugin-typescript": "^1.1.9",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "remove_redist": "rm -f ./src/layers/bridge_ibmmq/dist/nodejs/node_modules/bridge_ibmmq/node_modules/ibmmq/*IBM-MQC-Redist-LinuxX64.tar.gz",
    "build:layer": "cd ./src/layers/bridge_ibmmq/ && npm ci && npm run build && npm run remove_redist",
    "build_and_deploy": "rm -f -R .build/ .serverless/ && npm run build:layer && sls deploy",
    "deploy": "rm -f -R .build/ .serverless/ && sls deploy --verbose"
  }
}
